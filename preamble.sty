% SPECIFIC NOTATION

% GROUND RINGS FOR LATTICES:
% Laurent polynomial ring
\newcommand{\laurent}{{\field[\epsilon,\epsilon^{-1}]}}
% polynomial ring
\newcommand{\polys}{{\field[\epsilon]}}
% compact notation:
\renewcommand{\laurent}{\mathcal{S}}
\renewcommand{\polys}{\mathcal{R}}


% AFFINE FLAG VARIETIES [single, double, triple]
\newcommand{\flags}{\mathcal{F}}
\newcommand{\dblflags}{{\flags\!\times\!\flags}}
\newcommand{\triflags}{{\flags\!\times\!\flags\!\times\!\flags}}

% compositions (of r into n parts)
\newcommand{\compositions}[1][n,r]{\Lambda(#1)}

% index set for orbits in double flag variety.
\newcommand{\matrices}[1][n,r]{\Xi(#1)}

% cyclic quivers
\newcommand{\cyclic}{\Delta}

% quiver for presentation of q schur algebras.
\newcommand{\presentationquiver}[1][n,r]{\Gamma(#1)}

% ideal of relations for the quiver presentation
\newcommand{\quiverrelations}[1][n,r]{I(#1)}


% VARIOUS SCHUR ALGEBRAS

% classical Schur algebras
\newcommand{\schur}[1][n,r]{S(#1)}
% classical affine Schur algebras
\newcommand{\affineschur}[1][n,r]{\hat{S}(#1)}
% quantum Schur algebras
\newcommand{\qschur}[1][n,r]{S_q(#1)}
% quantum affine Schur algebras
\newcommand{\affineqschur}[1][n,r]{\hat{S}_q(#1)}
% affine 0-Schur algebras
\newcommand{\affinezeroschur}[1][n,r]{\hat{S}_0(#1)}
% generic affine Schur algebras (realisation of 0-Schur algebras.)
\newcommand{\generic}[1][n,r]{\hat{G}(#1)}
%
% finite type generic Schur algebras may be denoted S_0(n,r) as the isomorphism theorem is known.


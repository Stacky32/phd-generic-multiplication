\newcommand{\field}{\mathbf{k}}

% GENERAL LINEAR GROUPS
\newcommand{\GL}[2]{\operatorname{GL}_{#1}(#2)}
% argument 1 denotes the rank while argument 2 denotes the ground ring
% Usage: $\GL{~rank~}{~ring~}$.

% GROUND RINGS FOR LATTICES:
% use curly epsilon
\renewcommand{\epsilon}{\varepsilon}
% laurent polynomial ring
\newcommand{\laurent}{{\field[\epsilon,\epsilon^{-1}]}}
% polynomial ring
\newcommand{\polys}{{\field[\epsilon]}}

% compact notation:
\renewcommand{\laurent}{\mathcal{S}}
\renewcommand{\polys}{\mathcal{R}}

% CYCLIC FLAG VARIETIES [single, double, triple]
\newcommand{\flags}{\mathcal{F}}
\newcommand{\dblflags}{{\flags\!\times\!\flags}}
\newcommand{\triflags}{{\flags\!\times\!\flags\!\times\!\flags}}

% quantum integers
\newcommand{\qint}[1]{[[#1]]}

% compositions (of r into n parts)
\newcommand{\compositions}{{\Lambda_0}}

% elementary periodic matrices.
\newcommand{\elem}[2]{\mathcal{E}_{#1,#2}}

% periodic characteristic matrix of a pair.
\newcommand{\type}[2]{\operatorname{A}(#1,#2)}

% set of periodic characteristic matrices.
\newcommand{\matrices}{{\Lambda_1}}

% row and column sums of characteristic matrix.
\newcommand{\ro}{\operatorname{ro}}
\newcommand{\co}{\operatorname{co}}

% weight of the characteristic matrix
\newcommand{\weight}{\operatorname{wt}}

% orbits in double flag variety:
\newcommand{\orbit}[1]{\mathcal{O}_{#1}}

% PRODUCT(S) OF ORBITS
\newcommand{\xprod}[2][]{X_{#2}^{#1}}
\newcommand{\yprod}[2][]{Y_{#2}^{#1}}
\newcommand{\zprod}[2][]{\tilde{Y}_{#2}^{#1}}

% quiver for presentation of q schur algebras.
\newcommand{\presentationquiver}[1][n,r]{\Gamma(#1)}

% ideal of relations for the quiver presentation
\newcommand{\quiverrelations}[1][n,r]{I(#1)}

% VARIOUS SCHUR ALGEBRAS

% quantum affine Schur algebras
\newcommand{\qschur}[1][n,r]{\hat{S}_q(#1)}
% affine 0-Schur algebras
\newcommand{\zeroschur}[1][n,r]{\hat{S}_0(#1)}
% generic affine Schur algebras
\newcommand{\generic}[1][n,r]{\hat{G}(#1)}

% transpose symbol
\newcommand{\transpose}{\top}

% generic category
\newcommand{\gcat}[1][n,r]{\mathcal{G}(#1)}

